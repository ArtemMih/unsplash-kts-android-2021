<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="ButtonOnPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="backgroundTint">@color/colorSecondary</item>
    </style>

    <style name="TextOnPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">@color/colorSecondaryVariant</item>
        <item name="boxStrokeColor">@color/colorSecondaryVariant</item>
        <item name="counterTextColor">@color/colorSecondaryVariant</item>
        <item name="endIconTint">@color/colorSecondaryVariant</item>
        <item name="hintTextColor">@color/colorSecondaryVariant</item>
    </style>

    <style name="TextInputEditText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textColorHighlight">@color/colorOnPrimary</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
</resources>